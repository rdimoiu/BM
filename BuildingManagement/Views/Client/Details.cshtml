@model BuildingManagement.Models.Client

@{
    ViewBag.Title = @BuildingManagement.Resources.ClientTexts.Details;
}

<h2>@BuildingManagement.Resources.ClientTexts.Details</h2>

<div>
    <h4>@BuildingManagement.Resources.ClientTexts.Client</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@BuildingManagement.Resources.ClientTexts.Name</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>
        <dt>@BuildingManagement.Resources.ClientTexts.Phone</dt>
        <dd>@Html.DisplayFor(model => model.Phone)</dd>
        <dt>@BuildingManagement.Resources.ClientTexts.Address</dt>
        <dd>@Html.DisplayFor(model => model.Address)</dd>
        <dt>@BuildingManagement.Resources.ClientTexts.Contact</dt>
        <dd>@Html.DisplayFor(model => model.Contact)</dd>
        <dt>@BuildingManagement.Resources.ClientTexts.Email</dt>
        <dd>@Html.DisplayFor(model => model.Email)</dd>
    </dl>
</div>
<p>
    @Html.ActionLink(@BuildingManagement.Resources.ClientTexts.Edit, "Edit", new { id = Model.ID }) 
    @Html.ActionLink(@BuildingManagement.Resources.ClientTexts.BackToList, "Index")
</p>

