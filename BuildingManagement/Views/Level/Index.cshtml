@model IPagedList<BuildingManagement.Models.Level>
@using X.PagedList.Mvc;
@using X.PagedList;

@{
    ViewBag.Title = "Levels";
}

<h2>Levels</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index", "Level", FormMethod.Get))
{
    <p>
        Find @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Section", "Index", new { sortOrder = ViewBag.SectionSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Number", "Index", new { sortOrder = ViewBag.NumberSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Surface", "Index", new { sortOrder = ViewBag.SurfaceSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("People", "Index", new { sortOrder = ViewBag.PeopleSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in ViewBag.OnePageOfLevels)
    {
        <tr>
            <td>
                @item.Section.Number
            </td>
            <td>
                @item.Number
            </td>
            <td>
                @item.Surface
            </td>
            <td>
                @item.People
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) 
                @Html.ActionLink("Delete", "Delete", new { id = item.ID }) 
                @Html.ActionLink("Details", "Details", new { id = item.ID }) 
            </td>
        </tr>
    }
</table>
<br />
@Html.PagedListPager((IPagedList)ViewBag.OnePageOfLevels, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))

<script src="@Url.Content("~/Scripts/jquery-1.10.2.js")"></script>
