@model IPagedList<BuildingManagement.Models.InvoiceType>
@using X.PagedList.Mvc;
@using X.PagedList;

@{
    ViewBag.Title = "InvoiceTypes";
}

<h2>InvoiceTypes</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index", "InvoiceType", FormMethod.Get))
{
    <p>
        Find @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Type", "Index", new { sortOrder = ViewBag.TypeSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in ViewBag.OnePageOfInvoiceTypes)
    {
        <tr>
            <td>
                @item.Type
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.ID}) 
                @Html.ActionLink("Delete", "Delete", new { id = item.ID }) 
                @Html.ActionLink("Details", "Details", new { id = item.ID })                 
            </td>
        </tr>
    }
</table>
<br />
@Html.PagedListPager((IPagedList)ViewBag.OnePageOfInvoiceTypes, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))

<script src="~/Scripts/jquery-3.3.1.js"></script>