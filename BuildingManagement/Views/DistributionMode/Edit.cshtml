@model BuildingManagement.Models.DistributionMode

@{
    ViewBag.Title = BuildingManagement.Resources.Texts.Edit;
}

<h2>@BuildingManagement.Resources.Texts.Edit</h2>

@Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>@BuildingManagement.Resources.Texts.DistributionMode</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)

    <div class="form-group">
        <label class="control-label col-md-2">@BuildingManagement.Resources.Texts.Mode</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Mode, new {htmlAttributes = new {@class = "form-control", autocomplete = "off"}})
            @Html.ValidationMessageFor(model => model.Mode, "", new {@class = "text-danger"})
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value=@BuildingManagement.Resources.Texts.Save class="btn btn-default" onclick="ValidateAll('Edit')" />
        </div>
    </div>
</div>

<div>
    @Html.ActionLink(BuildingManagement.Resources.Texts.BackToList, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/ValidateDistributionMode.js"></script>
<script src="~/Scripts/ValidateFields.js"></script>
<script src="~/Scripts/SubmitPage.js"></script>
